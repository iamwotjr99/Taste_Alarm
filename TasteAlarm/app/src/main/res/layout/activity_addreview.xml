<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/indigo_100"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰 추가"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가게 이름"
        android:textSize="18dp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_margin="5dp"
        tools:ignore="MissingConstraints" />

    <AutoCompleteTextView
        android:id="@+id/addReview_resName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_tv"
        android:background="@drawable/layout_border"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:completionHint="가게 이름을 정확하게 입력해주세요"
        android:completionThreshold="1"/>

    <TextView
        android:id="@+id/review_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리뷰 달기"
        android:textSize="18dp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/addReview_resName"
        android:layout_marginTop="5dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/addReview_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/review_tv"
        android:background="@drawable/layout_border"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:hint="정성스런 리뷰를 써주시면 사장님이 기뻐하세요!"
        android:gravity="start"
        android:lines="10" />

    <TextView
        android:id="@+id/photo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진 추가"
        android:textSize="18dp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/addReview_content"
        android:layout_margin="5dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/addReview_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/user"
        app:layout_constraintTop_toBottomOf="@+id/photo_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/addPhoto_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addReview_image"
        android:text="사진 추가하기"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/addReview_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="리뷰 추가하기"
        android:layout_margin="5dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>