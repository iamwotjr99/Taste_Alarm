<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/indigo_100"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰 추가"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/white"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식당 이름"
        android:textSize="18dp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_margin="5dp"
        tools:ignore="MissingConstraints"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/ET1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_tv"
        android:background="@drawable/layout_border"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/review_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리뷰 달기"
        android:textSize="18dp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/ET1"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/ET2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/review_tv"
        android:background="@drawable/layout_border"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:hint="정성스런 리뷰를 써주시면 사장님이 기뻐하세요!"
        android:gravity="start"
        android:lines="10" />

    <TextView
        android:id="@+id/photo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진 추가"
        android:textSize="18dp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/ET2"
        android:layout_margin="5dp"
        tools:ignore="MissingConstraints"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/addphoto_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/photo_tv"
        android:text="사진 추가하기"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/addreview_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="리뷰 추가하기"
        android:layout_margin="5dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>